# Scriptum API Configuration
# Copy this file to .env and fill in your API keys

# TMDB API (Movie Recognition)
# Get your key at: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# OpenSubtitles API (Subtitle Search)
# Get your key at: https://www.opensubtitles.com/api
OPENSUBTITLES_API_KEY=your_opensubtitles_api_key_here

# Google Gemini API (Translation)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=5001
HOST=0.0.0.0
DEBUG=True

# Processing Settings
FFMPEG_THREADS=0
TRANSLATION_BATCH_SIZE=10
MAX_VIDEO_SIZE=10737418240

# Temporary Files
TEMP_DIR=/tmp
